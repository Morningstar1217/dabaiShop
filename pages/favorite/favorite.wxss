/* pages/favorite/favorite.wxss */
@import "/pages/index/index.wxss";

/* 标题 */

.favTitle {
  position: relative;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  overflow: hidden;
}

.favSearch {
  position: absolute;
  top: 50%;
  left: 40rpx;
  margin-top: -30rpx;
  width: 500rpx;
  height: 60rpx;
  padding-right: 50rpx;
  line-height: 60rpx;
  text-indent: 0.5em;
  border-radius: 30rpx;
  padding-left: 30rpx;
  font-size: 28rpx;
  background-color: #fff;
  background-image: url("http://pbn1t9k4c.bkt.clouddn.com/search.png");
  background-size: 40rpx;
  background-position: 530rpx;
  background-repeat: no-repeat;
}

.conso {
  float: right;
  width: 120rpx;
  text-align: center;
  font-size: 28rpx;
  color: #333;
}

.consoed {
  color: #e33d45;
}

/* *******************商品编辑************************* */

.consolePlatform {
  box-sizing: border-box;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  color: #fff;
  background: rgba(0, 0, 0, 0.3);
  transition: 0.5s;
}

.selectedAll {
  width: 160rpx;
  height: 80rpx;
  background: rgb(16, 172, 25);
  text-align: center;
}

.selectedAll > icon {
  margin-top: 16rpx;
  vertical-align: top;
}

.delComs {
  width: 160rpx;
  text-align: center;
  background: #e33d45;
}

.noComs {
  text-align: center;
  height: 100rpx;
  padding: 50rpx 0;
  line-height: 100rpx;
  font-size: 40rpx;
}
