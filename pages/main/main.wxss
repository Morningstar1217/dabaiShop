/* pages/main/main.wxss */
.header {
  position: relative;
  text-align: center;
  width: 100%;
  height: 360rpx;
  background-image: url("http://pbn1t9k4c.bkt.clouddn.com/userBg.png");
  background-size: 750rpx;
}

.userImg {
  display: inline-block;
  width: 188rpx;
  height: 188rpx;
  border-radius: 50%;
  border: 6rpx solid #dd4b5d;
}

.userName {
  font-size: 34rpx;
  height: 60rpx;
  line-height: 60rpx;
  margin-top: 20rpx;
  color: #fff;
}

/* 我的工具 */

.toolsTitle {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-indent: 2em;
  font-size: 28rpx;
  background: #fff;
  border-bottom: 2rpx solid #f2f2f2;
}

.toolsWrap {
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  width: 100%;
  background: #fff;
}

.toolList {
  position: relative;
  box-sizing: border-box;
  width: 33.33%;
  padding: 40rpx 30rpx;
  overflow: hidden;
  text-align: center;
  font-size: 28rpx;
  border-left: 1rpx solid #f2f2f2;
  border-bottom: 1rpx solid #f2f2f2;
}

.shareBtn {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: #fff;
  border-radius: 0;
  outline: none;
  opacity: 0;
}

.toolImg {
  width: 80rpx;
  height: 80rpx;
  vertical-align: middle;
}

.toolName {
  height: 50rpx;
  line-height: 50rpx;
}

.navigator-hover {
  background: #fff;
}

.share-image {
  position: fixed;
  left: 50%;
  top: 40rpx;
  margin-left: -325rpx;
  width: 650rpx;
}

.bigWrap {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.3);
  z-index: 999;
}
